{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "LaTeX: Compile and Open PDF",
      "type": "shell",
      "command": "lualatex ${file} && open ${fileBasenameNoExtension}.pdf",
      "options": {
        "cwd": "${fileDirname}"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "silent"
      }
    }
  ]
}
